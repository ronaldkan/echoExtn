{
  "manifest_version": 2,

  "name": "Echo",
  "description": "This extension will be used for echox",
  "version": "1.0",

  "browser_action": {
   "default_icon": "icon.png",
   "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": ["contentScript.css"],
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
   "activeTab",
   "http://*/"
   ]
}